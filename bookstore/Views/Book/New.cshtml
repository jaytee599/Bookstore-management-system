@model IEnumerable<bookstore.Models.AuthorDto>

@{
    ViewBag.Title = "New";
}

<h2>Create Book</h2>

<form action="/Book/Create" method="post">
    <div class="mt-3">
        <label for="form-label">Title</label>
        <input type="text" class="form-control" name="Title" />
    </div>

    <div class="mt-3">
        <label for="form-label">ISBN</label>
        <input type="text" class="form-control" name="ISBN" />
    </div>

    <div class="mt-3">
        <label for="form-label">Price</label>
        <input type="text" class="form-control" name="Price" />
    </div>

    <div class="mt-3">
        <label for="form-label">Date</label>
        <input type="date" class="form-control" name="BorrowingDate" />
    </div>

    <div class="mt-3">
        <label>Author</label>
        <select name="AuthorId" class="form-control">
            @foreach (var author in Model)
            {
                <option value="@author.AuthorId">@author.AuthorName</option>

            }
        </select>
        <p>
            NB: If no Author is available
            <a class="" href="@Url.Action("New", "Author")">Click here to add an Author</a>
        </p>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">
            Create
        </button>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "List")
</div>
