@model IEnumerable<bookstore.Models.BookDto>

@{
    ViewBag.Title = "New";
}

<h2>Rent a Book</h2>

<form action="/Rental/Create" method="post">

    <div class="mt-3">
        <label for="form-label">ISBN</label>
        <input type="text" class="form-control" name="ISBN" />
    </div>

    <div class="mt-3">
        <label for="form-label">Rental Date</label>
        <input type="date" class="form-control" name="RentalDate" />
    </div>

    <div class="mt-3">
        <label for="form-label">Due Date</label>
        <input type="date" class="form-control" name="DueDate" />
    </div>

    <div class="mt-3">
        <label for="form-label">Rental Available?</label>
        <input type="checkbox" class="" name="RentalAvailable" />
    </div>

    <div class="mt-3">
        <label>Book</label>
        <select name="BookID" class="form-control">
            @foreach (var book in Model)
            {
                <option value="@book.BookId">@book.Title</option>

            }
        </select>
        <p>
            NB: If no Book is available
            <a class="" href="@Url.Action("New", "Book")">Click here to add a book</a>
        </p>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">
            Create
        </button>
    </div>
</form>

